<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#535050">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Add Phone"
        android:textColor="#EDAAA5"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập tên liên hệ"
        android:textColorHint="@color/white"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/add_Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_Name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập số điện thoại"
        android:textColorHint="@color/white"
        android:textColor="#FFFFFF" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/add_Number"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="26dp">

        <Button
            android:id="@+id/btnSaveAddPhone"
            android:layout_height="match_parent"
            android:layout_below="@id/add_Number"
            android:layout_alignParentStart="true"
            android:background="@drawable/login_button_bk"
            android:layout_weight="1"
            android:text="Save" />

        <Button
            android:id="@+id/btnCancelAddPhone"
            android:layout_height="match_parent"
            android:layout_below="@id/add_Number"
            android:layout_toEndOf="@+id/btnSaveAddPhone"
            android:background="@drawable/login_button_bk"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Cancel" />
    </TableRow>
</RelativeLayout>